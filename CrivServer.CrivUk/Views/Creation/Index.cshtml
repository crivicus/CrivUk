@model CrivServer.CrivUk.Models.CreationViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.PageContent.content_h1</h1>

<div>
    <ul>
        @foreach (var cmspage in Model.CreationModelList)
        {
            <li>
                <div class="">@cmspage.content_id</div>
                <div class="">@cmspage.url</div>
                <div class="">@cmspage.tab_title</div>
                <div class="">@cmspage.page_title</div>
                <div class="">@cmspage.auth_level</div>
                <div class="">@cmspage.status</div>
                <div class="">@cmspage.published_date</div>
                <div class="">
                    @Html.ActionLink("Edit", "Edit", "Creation", new { id = cmspage.content_id }, new { @class = "btn btn-default", @title = "Edit this" })
                    @using (Html.BeginForm("Delete", "Creation", FormMethod.Post, new { @class = "" }))
                    {
                        <input type="hidden" name="id" value="@cmspage.content_id"/>
                        <input type="submit" name="Submit" value="Delete" class="btn btn-default", title="Delete this"/>
                    }
                </div>
            </li>
        }
    </ul>
</div>
